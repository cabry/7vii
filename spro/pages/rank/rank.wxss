.cash-topcard {
  width: 100%;
  background-color: #42bd55;
  padding-top: 55rpx;
  padding-bottom: 55rpx;
}

.cash-title {
  color: white;
  font-size: 24rpx;
  float: left;
  width: 100%;
  text-align: center;
  margin-bottom: 15rpx;
}

.cash-num {
  color: white;
  font-size: 64rpx;
  float: left;
  width: 100%;
  text-align: center;
}

.cash-deposit {
  color: white;
  font-size: 24rpx;
  text-align: right;
  right: 0px;
  margin-right: 25rpx;
}

.cash-bg-title {
  font-size: 28rpx;
  color: #9b9b9b;
  margin: 25rpx;
}

.cash-card {
  text-align: center;
  padding: 25rpx 0rpx 25rpx 0rpx;
  background-color: white;
  float: left;
}

.normal {
  padding: 0rpx 25rpx 0rpx 25rpx;
  background-color: white;
  border: 1px solid #42bd55;
  text-align: center;
  float: left;
  width: 260rpx;
  margin: 25rpx;
  font-size: 32rpx;
  line-height: 120%;
}

.selected {
  padding: 0rpx 25rpx 0rpx 25rpx;
  background-color: #42bd55;
  border: 1px solid #42bd55;
  text-align: center;
  float: left;
  width: 260rpx;
  margin: 25rpx;
  font-size: 32rpx;
  color: white;
  line-height: 120%;
}

.cash-word{
  color: #9B9B9B;
  font-size: 24rpx;
  float: left;
}

.cash-words{
  text-align: center;
  width: 100%;
}

.cash-cons{
  color: #4A90E2;
  font-size: 24rpx;
  float: left;
}

.cash-submit{
  margin-top: 55rpx;
  color: #42bd55;
}