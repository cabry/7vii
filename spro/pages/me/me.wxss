.name-card {
  width: 100%;
  height: 420rpx;
  background-color: white;
  text-align: center;
}

.userinfo-avatar {
  width: 172rpx;
  height: 172rpx;
  border-radius: 172rpx;
  border: 1px solid #42bd55;
  margin: 25rpx;
}

.userinfo-nickname {
  font-size: 32rpx;
  color: #42bd55;
}

.user-data-list {
  margin-top: 45rpx;
  text-align: center;
  width: 100%;
}

.train-data {
  float: left;
  text-align: center;
  width: 50%;
}

.train-big {
  font-size: 36rpx;
}

.train-small {
  font-size: 24rpx;
  color: #9b9b9b;
}

.tab-bar {
  bottom: 0;
  display: table;
  width: 100%;
  height: 100rpx;
  padding: 0;
  table-layout: fixed;
  border-bottom: 0;
  position: fixed;
  z-index: 10;
  right: 0;
  left: 0;
  background-color: white;
  border-top: 1px solid #d8d8d8;
}

.tab-on {
  color: black;
  display: table-cell;
  overflow: hidden;
  width: 1%;
  height: 100rpx;
  text-align: center;
  vertical-align: middle;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.tab-off {
  color: black;
  display: table-cell;
  overflow: hidden;
  width: 1%;
  height: 100rpx;
  text-align: center;
  vertical-align: middle;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.tab-label-off {
  font-size: 28rpx;
  display: block;
  overflow: hidden;
  text-overflow: ellipsis;
  color: #9b9b9b;
}

.tab-label-on {
  font-size: 28rpx;
  display: block;
  overflow: hidden;
  text-overflow: ellipsis;
  color: #42bd55;
}

.tab-icon {
  top: 6rpx;
  width: 52rpx;
  height: 52rpx;
  padding-top: 0;
  padding-bottom: 0;
  font-size: 48rpx;
  position: relative;
  z-index: 20;
  margin-bottom: 7rpx;
}

.me-list {
  margin-top: 45rpx;
  width: 750rpx;
  height: 775rpx;
}

.me-box-ic {
  width: 45rpx;
  height: 45rpx;
  margin-bottom: 32rpx;
  margin-top: 45rpx;
}

.me-box {
  background-color: white;
  width: 250rpx;
  height: 210rpx;
  float: left;
  text-align: center;
  border:1px solid #F5F5F5;
  box-sizing:border-box;
}

.me-box-title {
  font-size: 32rpx;
  color: #000;
}

.me-dot{
  background-color: #F56600;
  height: 16rpx;
  width: 16rpx;
  border-radius: 16rpx;
  margin-top: 35rpx;
  margin-left: 165rpx;
  position: fixed;
}
